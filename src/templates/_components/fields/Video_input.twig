{% import "_includes/forms" as forms %}

<div class="videos-field">
    {{ forms.textField({
        id: id,
        name: name,
        placeholder: "Enter a video URL from YouTube or Vimeo"|t('hfgvideo'),
        value: (value ? value.url : '')
    }) }}

    <div class="spinner hidden"></div>

    <div class="preview">{{ preview|raw }}</div>

    <div class="clear"></div>

</div>
